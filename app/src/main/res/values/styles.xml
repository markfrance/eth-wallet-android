<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background_selector</item>
        <item name="android:minHeight">@dimen/dimen_60dp</item>
        <item name="android:textColor">@color/button_text_selector</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/dimen_8dp</item>
    </style>

    <style name="Button.Light" parent="Button">
        <item name="android:backgroundTint">@color/light_button</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BuyButton">
        <item name="android:minHeight">@dimen/dimen_56dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>
</resources>
